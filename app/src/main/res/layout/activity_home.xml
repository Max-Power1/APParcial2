<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tvNumero2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:padding="30dp"
        />

    <TextView
        android:id="@+id/tvNumero3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â¿que inversion desea simular?"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:padding="20dp"
        />
    <EditText
        android:id="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Ingrese el monto a invertir"
        android:inputType="numberDecimal"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/et2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Ingrese el plazo en dias"
        android:inputType="number"
        android:layout_marginTop="30dp" />

    <Spinner
        android:id="@+id/banco_spinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:spinnerMode="dropdown"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/btCalcularRendimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular rendimiento"
        android:layout_marginTop="160dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btSalir"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="Salir"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btVerHistorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver historial"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>