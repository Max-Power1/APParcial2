<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tvNumero2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:padding="30dp" />

    <TextView
        android:id="@+id/tvNumero3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â¿que inversion desea simular?"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:padding="20dp" />
    <EditText
        android:id="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Ingrese el monto a invertir"
        android:inputType="numberDecimal"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/et2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Ingrese el plazo en dias"
        android:inputType="number"
        android:layout_marginTop="30dp" />

    <Spinner
        android:id="@+id/banco_spinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:spinnerMode="dropdown"
        android:layout_marginTop="30dp" />

    <Spinner
        android:id="@+id/inversion_spinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:spinnerMode="dropdown"
        android:layout_marginTop="30dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btCalcularRendimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular rendimiento"
        android:layout_marginTop="70dp"
        android:textColor="@color/white"
        android:background="@drawable/button_gradient"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="20dp">

        <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btSalir"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="salir"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/button_gradient"
            android:layout_marginEnd="10dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btVerHistorial"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="ver historial"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/button_gradient" />
    </LinearLayout>

</LinearLayout>