<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:id="@+id/tvNumero2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvNumero3"
        />

    <TextView
        android:id="@+id/tvNumero3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Que inversiòn desea simular?"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/et1" />

    <EditText
        android:id="@+id/et1"
        android:layout_width="0dp"
        android:hint="Ingrese monto a invertir"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:autofillHints=""
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/et2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ingrese plazo de dias"
        app:layout_constraintTop_toBottomOf="@+id/et1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:autofillHints=""
        android:inputType="textPersonName"
        android:layout_marginTop="30dp"

        />
    <Spinner
        android:id="@+id/banco_spinner"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:spinnerMode="dropdown"
        android:hint="Ingrese banco"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et2"
        />

    <!-- Este es un comentario
    <EditText
        android:id="@+id/et3"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Ingrese entidad a simular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et2"
        android:autofillHints=""
        android:inputType="textPersonName"
        android:layout_marginTop="30dp"
        />


    -->
    <!--  app:layout_constraintTop_toBottomOf="@+id/et3"-->
    <EditText
        android:id="@+id/et4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ingrese tipo de inversion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       android:autofillHints=""
       android:inputType="textPersonName"
       android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/banco_spinner"

        />


   <Button
       android:id="@+id/btCalcularRendimiento"

       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Calcular rendimiento"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:layout_marginTop="50dp"
       app:layout_constraintTop_toBottomOf="@+id/et4"
       />
   <Button
       android:id="@+id/btSalir"
       android:layout_width="135dp"
       android:layout_height="wrap_content"
       android:text="Salir"
       app:layout_constraintEnd_toStartOf="@+id/btVerHistorial"
       app:layout_constraintHorizontal_bias="0.5"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintWidth_percent="0.5"
       android:layout_marginBottom="35dp" />

   <Button
       android:id="@+id/btVerHistorial"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Ver historial"
       app:layout_constraintStart_toEndOf="@+id/btSalir"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintWidth_percent="0.5"
       android:layout_marginBottom="35dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

